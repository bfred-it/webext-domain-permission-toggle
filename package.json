{
  "name": "webext-domain-permission-toggle",
  "version": "1.0.0-0",
  "description": "Browser-action context menu to request permission for the current tab.",
  "license": "MIT",
  "repository": "bfred-it/webext-domain-permission-toggle",
  "author": "Federico Brigante <github@bfred.it> (bfred.it)",
  "keywords": [
    "browser",
    "permission",
    "ui",
    "extension",
    "webextension",
    "chrome",
    "firefox"
  ],
  "main": "webext-domain-permission-toggle.js",
  "files": [
    "webext-domain-permission-toggle.js",
    "index.d.ts"
  ],
  "scripts": {
    "watch": "onchange '*.js' --initial -- xo --fix",
    "test": "xo"
  },
  "xo": {
    "envs": [
      "browser",
      "webextensions"
    ],
    "rules": {
      "no-alert": 0
    }
  },
  "devDependencies": {
    "onchange": "^3.2.0",
    "xo": "*"
  }
}
